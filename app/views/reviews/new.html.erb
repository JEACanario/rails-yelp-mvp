<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<div>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
